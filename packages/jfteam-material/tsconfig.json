{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "outDir": "dist",
    "rootDir": "src",
    "declarationDir": "lib",
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true
  },
  "include": ["./declaration.d.ts", "src", "../../../@types"],
  "exclude": ["node_modules", "dist", "./lib", "./esm", "./cjs"]
}
